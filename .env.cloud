# Cloud Deployment Environment Variables
# Copy this to .env and update with your actual cloud values

# CLOUD HOST CONFIGURATION - UPDATE THESE
HOST_DOMAIN=your-domain.com
HOST_IP=your-server-ip
FRONTEND_HOST=your-frontend-domain.com

SECRET_KEY=your-production-secret-key
DEBUG=False
ALLOWED_HOSTS=your-domain.com,your-server-ip,0.0.0.0

# Cloud Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=nbfc_db
DB_USER=your_cloud_db_user
DB_PASSWORD=your_secure_cloud_db_password
DB_HOST=your-cloud-db-host
DB_PORT=5432

STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://your-frontend-domain.com

# Production Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Other settings...
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=xlsx,xls,csv,pdf,doc,docx,jpg,jpeg,png
DEFAULT_ORGANIZATION_CODE_PREFIX=ORG
DEFAULT_EMPLOYEE_CODE_PREFIX=EMP
DEFAULT_LOAN_CODE_PREFIX=LOAN
TIME_ZONE=Asia/Kolkata
